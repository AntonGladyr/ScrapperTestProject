@model TestProject.Models.NewsData

<div 
    id="news_@(Model.NewsServicePage)"
    data-reddit-after="@Model.RedditAfterID"
    data-news-service-page="@Model.NewsServicePage">
    @foreach (var item in Model.NewsList)
    {
        <div class="col-xs-6 col-md-3 portfolio-item">
            <div class="thumbnail">
                <img src="@(item.ImageURL ?? "https://www.silvercompany.co.uk/images/no_image_available.png")"
                    class="img-responsive" alt="">
                <div class="caption">
                    <h3>
                        <a href="@item.Permalink">
                            @Html.Raw((item.Title.Length > 100 ? item.Title.Substring(0, 100) + "..." : item.Title))
                        </a>
                    </h3>
                    @*<p>
                        @Html.Raw((item.Description.Length > 150 ? item.Description.Substring(0, 150) + "..." : item.Description))
                    </p>*@
                    @*<p class="row-bottom">@Html.Raw(@)@item.Author</p>*@
                    @*<p><a href="http://@item.Permalink" class="btn btn-primary" role="button">Open news</a>*@
                </div>
            </div>
        </div>
    }
</div>